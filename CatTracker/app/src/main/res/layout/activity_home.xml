<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <Button
        android:id="@+id/btn_closest_stop"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Closest Stop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_itinerary_search"
        tools:drawableEnd="@android:drawable/ic_menu_mylocation" />

    <Button
        android:id="@+id/btn_timetables"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:drawableEnd="@android:drawable/ic_lock_idle_alarm"
        android:text="Timetables"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_favorites" />

    <Button
        android:id="@+id/btn_itinerary_search"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:drawableEnd="@android:drawable/ic_dialog_map"
        android:text="Itinerary Search"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="100dp" />

    <Button
        android:id="@+id/btn_favorites"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_marginEnd="32dp"
        android:text="Favorites"
        app:layout_constraintEnd_toEndOf="parent"
        tools:drawableEnd="@android:drawable/btn_star"
        tools:layout_editor_absoluteY="100dp" />

    <Button
        android:id="@+id/btn_get_me_to_campus"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="Get me to Campus"
        app:layout_constraintTop_toBottomOf="@+id/btn_closest_stop"
        tools:layout_editor_absoluteX="42dp" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation_menu"
        tools:layout_editor_absoluteX="8dp">

    </android.support.design.widget.BottomNavigationView>
</android.support.constraint.ConstraintLayout>